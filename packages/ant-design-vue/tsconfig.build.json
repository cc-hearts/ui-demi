{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "../../types/ant-design-vue",
    "jsxImportSource": "vue",
    /* Linting */
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/components/**/*.ts",
    "src/components/**/*.d.ts",
    "src/components/**/*.tsx",
    "src/components/**/*.vue"
  ],
  "exclude": ["node_internals"]
}
